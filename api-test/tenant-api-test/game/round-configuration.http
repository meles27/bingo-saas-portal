###
# LIST ROUND-CONFIGURATIONS
GET {{ TENANT_BASE_URL }}/round-configurations?search= HTTP/1.1
Authorization: Bearer {{ access }}
Content-Type: application/json


###
# CREATE ROUND-CONFIGURATION
POST {{ TENANT_BASE_URL }}/round-configurations HTTP/1.1
Authorization: Bearer {{ access }}
Content-Type: application/json

{
  "name": "Classic Bingo",
  "rows": 5,
  "cols": 5,
  "freespaceEnabled": false,
  "minRange": 1,
  "maxRange": 75,
  "patternIds": [
    "69706565-48d1-4364-882b-80af5d939396",
    "0930c630-03d5-4794-bc79-57349318b37c"
  ]
}


###
# RETRIEVE ROUND-CONFIGURATION
GET {{ TENANT_BASE_URL }}/round-configurations/{{ roundConfigId }} HTTP/1.1
Authorization: Bearer {{ access }}
Content-Type: application/json


###
# UPDATE ROUND-CONFIGURATION
PATCH {{ TENANT_BASE_URL }}/round-configurations/{{ roundConfigId }} HTTP/1.1
Authorization: Bearer {{ access }}
Content-Type: application/json

{}


###
# DELETE ROUND-CONFIGURATION
DELETE {{ TENANT_BASE_URL }}/round-configurations/{{ roundConfigId }} HTTP/1.1
Authorization: Bearer {{ access }}
Content-Type: application/json


