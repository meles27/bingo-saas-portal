###
# LIST PRICING-PLANS
GET {{ SYSTEM_BASE_URL }}/pricing-plans HTTP/1.1


###
#CREATE PRICING-PLAN
POST {{ SYSTEM_BASE_URL }}/pricing-plans HTTP/1.1
Content-Type: application/json
X-Tenant-Subdomain: {{ subdomain }}
X-Tenant-ID: {{ tenantId }}

{
  "name": "Starter",
  "description": "Basic plan suitable for small shops just starting out.",
  "monthlyPrice": "9.99",
  "annualPrice": "99.99",
  "extraFeatures": [
    "Basic Reports",
    "Email Support"
  ]
}


###
# RETRIEVE PRICING-PLAN
GET {{ SYSTEM_BASE_URL }}/pricing-plans/{{ pricingPlanId }} HTTP/1.1


###
# UPDATE PRICING-PLAN
PATCH {{ SYSTEM_BASE_URL }}/pricing-plans/{{ pricingPlanId }} HTTP/1.1
Content-Type: application/json
X-Tenant-Subdomain: {{ subdomain }}
X-Tenant-ID: {{ tenantId }}

{
  "extraFeatures": [
    "Basic Reports",
    "Email Support",
    "Barcode Scanning support"
  ]
}


###
# DELETE PRICING-PLAN
